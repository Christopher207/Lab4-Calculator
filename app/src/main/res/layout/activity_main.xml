<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvPantalla"
        android:layout_width="301dp"
        android:layout_height="59dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="63dp"
        android:text="Calculadora"
        android:textAlignment="textEnd"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/btnMenos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPor"
        android:layout_width="77dp"
        android:layout_height="81dp"
        android:layout_marginTop="185dp"
        android:layout_marginEnd="24dp"
        android:text="@string/por"
        app:layout_constraintBottom_toBottomOf="@+id/btnMas"
        app:layout_constraintEnd_toStartOf="@+id/btnMas"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMenos"
        android:layout_width="77dp"
        android:layout_height="83dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="21dp"
        android:text="@string/menos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnEntre"
        android:layout_width="77dp"
        android:layout_height="83dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="16dp"
        android:text="@string/entre"
        app:layout_constraintBottom_toBottomOf="@+id/btnPor"
        app:layout_constraintEnd_toStartOf="@+id/btnPor"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMas"
        android:layout_width="77dp"
        android:layout_height="83dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="16dp"
        android:text="@string/mas"
        app:layout_constraintBottom_toBottomOf="@+id/btnMenos"
        app:layout_constraintEnd_toStartOf="@+id/btnMenos"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnSiete"
        android:layout_width="77dp"
        android:layout_height="83dp"
        android:layout_marginTop="12dp"
        android:text="@string/siete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEntre" />

    <Button
        android:id="@+id/btnOcho"
        android:layout_width="77dp"
        android:layout_height="83dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="@string/ocho"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.004"
        app:layout_constraintStart_toEndOf="@+id/btnSiete"
        app:layout_constraintTop_toBottomOf="@+id/btnPor"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnNueve"
        android:layout_width="77dp"
        android:layout_height="83dp"
        android:layout_marginTop="12dp"
        android:text="@string/nueve"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.661"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMas" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="77dp"
        android:layout_height="83dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:text="@string/Ce"
        app:layout_constraintBottom_toTopOf="@+id/btnBackspace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMenos" />

    <Button
        android:id="@+id/btnCuatro"
        android:layout_width="77dp"
        android:layout_height="83dp"
        android:layout_marginTop="16dp"
        android:text="@string/cuatro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSiete"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnCinco"
        android:layout_width="77dp"
        android:layout_height="83dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="24dp"
        android:text="@string/cinco"
        app:layout_constraintBottom_toTopOf="@+id/btnDos"
        app:layout_constraintEnd_toStartOf="@+id/btnSeis"
        app:layout_constraintStart_toStartOf="@+id/btnCuatro"
        app:layout_constraintTop_toBottomOf="@+id/btnOcho" />

    <Button
        android:id="@+id/btnSeis"
        android:layout_width="77dp"
        android:layout_height="83dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="17dp"
        android:text="@string/seis"
        app:layout_constraintBottom_toTopOf="@+id/btnTres"
        app:layout_constraintEnd_toStartOf="@+id/btnBackspace"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNueve" />

    <Button
        android:id="@+id/btnBackspace"
        android:layout_width="77dp"
        android:layout_height="83dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="21dp"
        android:text="@string/backspace"
        app:layout_constraintBottom_toTopOf="@+id/btnIgual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnClear" />

    <Button
        android:id="@+id/btnUno"
        android:layout_width="77dp"
        android:layout_height="83dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="170dp"
        android:text="@string/uno"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCuatro"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnDos"
        android:layout_width="77dp"
        android:layout_height="83dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="171dp"
        android:text="@string/dos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnTres"
        app:layout_constraintStart_toEndOf="@+id/btnUno"
        app:layout_constraintTop_toBottomOf="@+id/btnCinco" />

    <Button
        android:id="@+id/btnTres"
        android:layout_width="77dp"
        android:layout_height="83dp"
        android:layout_marginStart="218dp"
        android:layout_marginTop="477dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="170dp"
        android:text="@string/tres"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnIgual"
        app:layout_constraintStart_toEndOf="@+id/btnDos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnIgual"
        android:layout_width="77dp"
        android:layout_height="185dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="68dp"
        android:text="@string/igual"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBackspace" />

    <Button
        android:id="@+id/btnCero"
        android:layout_width="169dp"
        android:layout_height="83dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="577dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="70dp"
        android:text="@string/cero"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnPunto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPunto"
        android:layout_width="77dp"
        android:layout_height="83dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="72dp"
        android:text="@string/punto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnIgual"
        app:layout_constraintStart_toEndOf="@+id/btnCero"
        app:layout_constraintTop_toBottomOf="@+id/btnTres"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>